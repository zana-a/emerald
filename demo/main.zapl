mod Examples do

  def fib(n: Int): Int = cond do
    n < 3 => 1
    _ => fib(n - 1) + fib(n - 2)
  end

  def add(a: Int, b: Int): Int = do
    a + b
  end

  def hello(name: String): String = do
    "Hello, " + name + "!"
  end

end

# 4
println(Examples::add(1, 3))

# 144
println(Examples::fib(12))

# Hello, Zana!
println(Examples::hello("Zana"))
